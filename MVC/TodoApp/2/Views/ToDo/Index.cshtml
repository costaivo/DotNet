@model TodoApp.Models.HomeViewModel
@{
    ViewBag.Title = "ToDo";
}

<div class="container">
    @using (Html.BeginForm("AddItem", "ToDo", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <label for="example-text-input" class="col-2 col-form-label">Text</label>
        <div class="form-group row">
            @Html.HiddenFor(m => m.DeleteKey, new { @class = "form-control" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Item, new { @class = "form-control" })
            </div>
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Add" />
            </div>
        </div>

        <div>
            <h3>Todo List</h3>
            <ul class="list-group">
                @foreach (KeyValuePair<int, string> description in TodoApp.Models.HomeViewModel.Todos)
                {
                    <li class="list-group-item">
                        @Html.Label(description.Value)
                        <input class="btn button btn-danger" type="button" value="Remove" onclick="location.href='@Url.Action("RemoveItem", new { DeleteKey = @description.Key})'" />
                        <input class="btn button btn-warning" type="button" value="Edit" onclick="location.href='@Url.Action("EditItem", new { DeleteKey = @description.Key})'" />
                    </li>
                }
            </ul>
        </div>

    }

</div>

<script>
    function EditItem(id, text) {
        @*@Model.DeleteKey = id;*@
        $("#item").focus();
        $("#item").text(text);
        alert(id + text);
    }
</script>

<style type="text/css">
    li {
        margin: 5px 0px 0px 0px;
        border-bottom: 1px solid grey;
    }

    .button {
        margin: 0px 5px 0px 5px;
        float: right;
    }
</style>


  